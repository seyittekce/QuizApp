@using QuizApp.Models.Addons
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico">
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&amp;display=swap" rel="stylesheet">
    <link href="~/studentTheme/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/studentTheme/assets/css/plugins.css" rel="stylesheet" type="text/css">
    <link href="~/studentTheme/assets/css/structure.css" rel="stylesheet" type="text/css" class="structure">
    <link href="~/studentTheme/assets/css/components/cards/card.css" rel="stylesheet" type="text/css"/>
    <style>
        /*
            The below code is for DEMO purpose --- Use it if you are using this demo otherwise, Remove it
        */
        .navbar .navbar-item.navbar-dropdown { margin-left: auto; }

        .layout-px-spacing { min-height: calc(100vh - 145px) !important; }
    </style>
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM STYLES -->
    <!-- END PAGE LEVEL PLUGINS/CUSTOM STYLES -->
</head>
<body class="sidebar-noneoverflow starterkit minimal align-items-center bg-light">
<div class="header-container fixed-top  ">
    <header class="header navbar navbar-expand-sm position-relative">
        <ul class="navbar-item flex-row">
            <li class="nav-item theme-logo">
                <a href="~/Students/Home">
                    ANASAYFA
                </a>
            </li>
        </ul>
        <ul class="navbar-item flex-row navbar-dropdown">
            <li class="nav-item dropdown user-profile-dropdown  order-lg-0 order-1">
                <a href="javascript:void(0);" class="nav-link dropdown-toggle user" id="userProfileDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="~/svg/016-boy-7.svg" alt="admin-profile" class="img-fluid">
                </a>
                <div class="dropdown-menu position-absolute animated fadeInUp" aria-labelledby="userProfileDropdown">
                    <div class="user-profile-section">
                        <div class="media mx-auto">
                            <img class="img-fluid mr-2" src="~/svg/016-boy-7.svg">
                            <div class="media-body">
                                <h5>@StudentLogin.GetLoginStudent.FirsName @StudentLogin.GetLoginStudent.LastName</h5>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-item">
                        <a href="~/Students/Profile">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle>
                            </svg> <span> Profilim</span>
                        </a>
                    </div>
                    <div class="dropdown-item">
                        <a href="~/Students/signout">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg> <span>Çıkış Yap</span>
                        </a>
                    </div>
                </div>
            </li>
        </ul>
    </header>
</div>
@RenderBody()
<script src="~/studentTheme/assets/js/libs/jquery-3.1.1.min.js"></script>
<script src="~/studentTheme/bootstrap/js/popper.min.js"></script>
<script src="~/studentTheme/bootstrap/js/bootstrap.min.js"></script>
<script src="~/studentTheme/assets/js/app.js"></script>
<script>
    $(document).ready(function() {
        App.init();
    });
</script>
<script src="~/assets/js/custom.js"></script>
<!-- END GLOBAL MANDATORY SCRIPTS -->
<!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
<!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>
</html>