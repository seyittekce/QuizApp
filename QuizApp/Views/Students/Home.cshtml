@using QuizApp.Models.Addons
@{
    ViewBag.Title = "Home";
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>CORK Admin Template - Starter Kit - Blank Page</title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico">
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&amp;display=swap" rel="stylesheet">
    <link href="~/studentTheme/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/studentTheme/assets/css/plugins.css" rel="stylesheet" type="text/css">
    <link href="~/studentTheme/assets/css/structure.css" rel="stylesheet" type="text/css" class="structure">
    <link href="~/studentTheme/assets/css/structure.css" rel="stylesheet" type="text/css" class="structure">
    <link href="~/studentTheme/assets/css/components/cards/card.css" rel="stylesheet" type="text/css"/>
    <script>
        function Videos() {

            window.location.href = "../Students/Videos";
        }

        function ExamList() {

            window.location.href = "../Students/ExamList";
        }

        function Articles() {

            window.location.href = "../Students//Articles";
        }

    </script>
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM STYLES -->

    <!-- END PAGE LEVEL PLUGINS/CUSTOM STYLES -->
</head>
<body class="sidebar-noneoverflow starterkit minimal align-items-center">
<center>
    <div class="row" style="padding-top: 16%">
        <div class="col-lg-4 layout-spacing layout-top-spacing" style="cursor: pointer" onclick="Videos()">
            <div class="card component-card_5">
                <div class="card-body">
                    <p class="card-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-video">
                            <polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                        </svg>
                    </p>
                    <div class="user-info">
                        <div class="media-body">

                            <h5 class="card-user_name">Video Dersler</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 layout-spacing layout-top-spacing" style="cursor: pointer" onclick="ExamList()">
            <div class="card component-card_5">
                <div class="card-body">
                    <p class="card-text">

                        <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline>
                        </svg>
                    </p>
                    <div class="user-info">
                        <div class="media-body">
                            <h5 class="card-user_name">Sınavlar</h5>
                            @{
                                var a = ListingExam.ListExam();
                                if (a.Count != 0)
                                {
                                    <p class="card-text">@a.Count Adet Sınavınız Var</p>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 layout-spacing layout-top-spacing" style="cursor: pointer" onclick="Articles()">
            <div class="card component-card_5">
                <div class="card-body">
                    <p class="card-text">

                    <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-book">
                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                    </svg>
                    <div class="user-info">
                        <div class="media-body">
                            <h5 class="card-user_name">Makaleler</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>
<script src="~/studentTheme/assets/js/libs/jquery-3.1.1.min.js"></script>
<script src="~/studentTheme/bootstrap/js/popper.min.js"></script>
<script src="~/studentTheme/bootstrap/js/bootstrap.min.js"></script>
<script src="~/studentTheme/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="~/studentTheme/assets/js/app.js"></script>
<script>
    $(document).ready(function() {
        App.init();
    });
</script>
<script src="~/assets/js/custom.js"></script>
<!-- END GLOBAL MANDATORY SCRIPTS -->
<!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
<!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>
</html>